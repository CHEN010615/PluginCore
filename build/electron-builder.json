{
  "appId": "chen.imageTransformer",
  "productName": "ImageTransformer",
  "copyright": "Â©2026 ChenJY All Rights Reserved.",
  "directories": {
    "output": "dist/electron"
  },
  "win": {
    "icon": "./assets/application.png",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "ia32",
          "x64"
        ]
      }
    ]
  },
  "mac": {
    "category": "public.app-category.utilities",
    "icon": "./assets/application-mac.png",
    "target": ["dmg", "zip"],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "extraFiles": [
      {
        "from": "node_modules/sharp/vendor",
        "to": "app.asar.unpacked/node_modules/sharp/vendor"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "./assets/installer.ico",
    "installerHeaderIcon": "./assets/installer.ico",
    "uninstallerIcon": "./assets/uninstaller.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": false,
    "shortcutName": "ImageTransformer",
    "runAfterFinish": false
  },
  "files": [
    "dist/vite/**/*",
    "electron/**/*"
  ],
  "asar": true,
  "asarUnpack": [
    "node_modules/sharp/**/*",
    "node_modules/@img/**/*"
  ],
  "npmRebuild": true,
  "buildDependenciesFromSource": true,
  "extraResources": [],
  "afterPack": "./build/after-pack.js"
}